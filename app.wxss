/**
 * 全局样式文件
 * 定义整个小程序的通用样式
 */

/* 全局重置样式 */
view, text, button, input, textarea, image {
  box-sizing: border-box;
}

page {
  background-color: #f5f5f5;
  font-family: -apple-system, BlinkMacSystemFont, 'Segoe UI', 'PingFang SC', 'Hiragino Sans GB', 'Microsoft YaHei', 'Helvetica Neue', Helvetica, Arial, sans-serif;
  font-size: 32rpx;
  color: #333;
  line-height: 1.6;
}

/* 容器样式 */
.container {
  padding: 40rpx;
  min-height: 100vh;
}

/* 卡片样式 */
.card {
  background: #fff;
  border-radius: 16rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  margin-bottom: 32rpx;
  overflow: hidden;
}

/* 按钮样式 */
.btn {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  border: none;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
}

.btn-primary {
  background: linear-gradient(135deg, #4FC3F7 0%, #29B6F6 100%);
  color: #fff;
}

.btn-primary:active {
  background: linear-gradient(135deg, #29B6F6 0%, #0288D1 100%);
  transform: scale(0.98);
}

/* 输入框样式 */
.input-wrapper {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  border: 2rpx solid #f0f0f0;
}

.input {
  width: 100%;
  min-height: 200rpx;
  font-size: 28rpx;
  line-height: 1.6;
  border: none;
  outline: none;
  resize: none;
}

.input-placeholder {
  color: #999;
}

/* 工具卡片样式 */
.tool-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 32rpx;
  padding: 40rpx;
}

.tool-item {
  background: #fff;
  border-radius: 20rpx;
  padding: 40rpx 32rpx;
  text-align: center;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.08);
  transition: all 0.3s ease;
}

.tool-item:active {
  transform: scale(0.95);
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.12);
}

.tool-icon {
  width: 120rpx;
  height: 120rpx;
  background: #f0f8ff;
  border-radius: 20rpx;
  margin: 0 auto 24rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  color: #2196F3;
}

.tool-name {
  font-size: 28rpx;
  color: #333;
  font-weight: 500;
}

/* 页面标题样式 */
.page-title {
  font-size: 36rpx;
  font-weight: 600;
  color: #333;
  text-align: center;
  margin-bottom: 40rpx;
}

/* 提示文本样式 */
.tip-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 32rpx;
}

/* 加载状态 */
.loading {
  text-align: center;
  padding: 40rpx;
  color: #999;
}

/* 错误状态 */
.error {
  text-align: center;
  padding: 40rpx;
  color: #f44336;
}

/* 成功状态 */
.success {
  text-align: center;
  padding: 40rpx;
  color: #4caf50;
}

/* 导航栏返回按钮 */
.nav-back {
  position: absolute;
  left: 32rpx;
  top: 50%;
  transform: translateY(-50%);
  width: 60rpx;
  height: 60rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 32rpx;
  color: #333;
}