<!--视频去水印页面结构-->
<view class="container">  
  <!-- 输入区域 -->
  <view class="input-wrapper">
    <textarea 
      class="input" 
      placeholder="请输入抖音视频分享链接..." 
      placeholder-class="input-placeholder"
      value="{{videoUrl}}"
      bindinput="onInputChange"
      maxlength="500"
      auto-height
    ></textarea>
  </view>
  
  <!-- 去水印按钮 -->
  <button 
    class="btn btn-primary" 
    bindtap="removeWatermark"
    disabled="{{loading || isButtonDisabled}}"
    loading="{{loading}}"
  >
    {{loading ? '处理中...' : '去水印'}}
  </button>
  
  <!-- 结果显示框 -->
  <view class="result-box" wx:if="{{showResult && resultUrl}}">
    <view class="result-tip">点击下方复制链接，粘贴到浏览器下载</view>
    <view class="result-url" bindtap="copyResultUrl">{{resultUrl}}</view>
  </view>
  
  <!-- 使用说明 -->
  <view class="help-section">
    <view class="help-title">使用说明：</view>
    <view class="help-content">
      <text class="help-item">1. 复制抖音视频分享链接</text>
      <text class="help-item">2. 粘贴到上方输入框中</text>
      <text class="help-item">3. 点击"去水印"按钮</text>
      <text class="help-item">4. 等待处理完成后下载</text>
    </view>
  </view>
</view>