/**
 * 视频去水印页面样式
 */

.container {
  padding: 40rpx;
  min-height: 100vh;
  position: relative;
}



.tip-text {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 32rpx;
  padding: 0 16rpx;
}

.input-wrapper {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  border: 2rpx solid #f0f0f0;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.input {
  width: 100%;
  min-height: 200rpx;
  font-size: 28rpx;
  line-height: 1.6;
  border: none;
  outline: none;
  resize: none;
  color: #333;
}

.input-placeholder {
  color: #999;
}

.btn {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  border: none;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  margin-bottom: 32rpx;
}

.btn-primary {
  background: linear-gradient(135deg, #4FC3F7 0%, #29B6F6 100%);
  color: #fff;
}

.btn-primary:active {
  background: linear-gradient(135deg, #29B6F6 0%, #0288D1 100%);
  transform: scale(0.98);
}

.btn-primary[disabled] {
  background: #e0e0e0;
  color: #999;
  transform: none;
}

/* 结果显示框样式 */
.result-box {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin: 32rpx 0;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  border: 2rpx solid #f0f0f0;
  animation: fadeInUp 0.5s ease-out;
}

.result-tip {
  font-size: 26rpx;
  color: #666;
  text-align: center;
  margin-bottom: 24rpx;
  line-height: 1.5;
}

.result-url {
  background: #f8f9fa;
  border-radius: 12rpx;
  padding: 24rpx;
  font-size: 24rpx;
  color: #333;
  line-height: 1.6;
  word-break: break-all;
  border: 2rpx solid #e9ecef;
  transition: all 0.3s ease;
}

.result-url:active {
  background: #e9ecef;
  border-color: #4FC3F7;
  transform: scale(0.98);
}

.download-section {
  margin-bottom: 24rpx;
}

.download-title {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.download-actions {
  display: flex;
  gap: 16rpx;
}

.btn-download {
  flex: 1;
  background: linear-gradient(135deg, #4CAF50 0%, #45a049 100%);
  color: #fff;
  border: none;
  border-radius: 32rpx;
  padding: 16rpx 24rpx;
  font-size: 26rpx;
  transition: all 0.3s ease;
}

.btn-download:active {
  background: linear-gradient(135deg, #45a049 0%, #3d8b40 100%);
  transform: scale(0.95);
}

.btn-copy {
  flex: 1;
  background: #f0f8ff;
  color: #4FC3F7;
  border: 2rpx solid #4FC3F7;
  border-radius: 32rpx;
  padding: 16rpx 24rpx;
  font-size: 26rpx;
  transition: all 0.3s ease;
}

.btn-copy:active {
  background: #4FC3F7;
  color: #fff;
  transform: scale(0.95);
}

.preview-section {
  margin-bottom: 24rpx;
}

.preview-title {
  font-size: 26rpx;
  color: #333;
  font-weight: 500;
  margin-bottom: 16rpx;
}

.preview-image {
  width: 100%;
  max-height: 400rpx;
  border-radius: 12rpx;
  background: #f5f5f5;
}

.error-wrapper {
  background: #fff5f5;
  border: 2rpx solid #ffebee;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-top: 32rpx;
}

.error-text {
  font-size: 26rpx;
  color: #f44336;
  text-align: center;
  line-height: 1.5;
}

.help-section {
  background: #f8f9fa;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-top: 40rpx;
}

.help-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 20rpx;
}

.help-content {
  display: flex;
  flex-direction: column;
  gap: 12rpx;
}

.help-item {
  font-size: 24rpx;
  color: #666;
  line-height: 1.5;
}

/* 加载状态 */
.loading {
  opacity: 0.7;
  pointer-events: none;
}

/* 动画效果 */
.result-wrapper {
  animation: fadeInUp 0.5s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}