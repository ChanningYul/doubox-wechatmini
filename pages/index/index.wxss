/**
 * 首页样式文件
 */

.container {
  padding: 40rpx;
  min-height: 100vh;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
}



.tool-grid {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 40rpx;
  padding: 0 20rpx;
}

.tool-item {
  background: rgba(255, 255, 255, 0.95);
  border-radius: 24rpx;
  padding: 60rpx 40rpx;
  text-align: center;
  box-shadow: 0 8rpx 32rpx rgba(0, 0, 0, 0.15);
  transition: all 0.3s ease;
  backdrop-filter: blur(10rpx);
}

.tool-item:active {
  transform: scale(0.95) translateY(4rpx);
  box-shadow: 0 4rpx 16rpx rgba(0, 0, 0, 0.2);
}

.tool-icon {
  width: 120rpx;
  height: 120rpx;
  background: linear-gradient(135deg, #4FC3F7 0%, #29B6F6 100%);
  border-radius: 24rpx;
  margin: 0 auto 32rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  font-size: 48rpx;
  box-shadow: 0 4rpx 16rpx rgba(79, 195, 247, 0.4);
}

.icon-eye,
.icon-document,
.icon-edit,
.icon-shield {
  font-size: 48rpx;
}

.tool-name {
  font-size: 32rpx;
  color: #333;
  font-weight: 600;
  letter-spacing: 1rpx;
}

/* 响应式适配 */
@media (max-width: 750rpx) {
  .tool-grid {
    gap: 32rpx;
    padding: 0 10rpx;
  }
  
  .tool-item {
    padding: 50rpx 30rpx;
  }
  
  .tool-icon {
    width: 100rpx;
    height: 100rpx;
    font-size: 40rpx;
  }
  
  .tool-name {
    font-size: 28rpx;
  }
}