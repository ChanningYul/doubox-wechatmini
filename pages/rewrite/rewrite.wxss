/**
 * 文案仿写页面样式
 */

.container {
  padding: 40rpx;
  min-height: 100vh;
  position: relative;
}



.input-wrapper {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  margin-bottom: 32rpx;
  border: 2rpx solid #f0f0f0;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
}

.input-label {
  font-size: 26rpx;
  color: #666;
  margin-bottom: 16rpx;
  font-weight: 500;
}

.input {
  width: 100%;
  min-height: 200rpx;
  font-size: 28rpx;
  line-height: 1.6;
  border: none;
  outline: none;
  resize: none;
  color: #333;
}

.input-placeholder {
  color: #999;
}

.btn {
  width: 100%;
  height: 88rpx;
  border-radius: 44rpx;
  border: none;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
  transition: all 0.3s ease;
  margin-bottom: 32rpx;
}

.btn-primary {
  background: linear-gradient(135deg, #4FC3F7 0%, #29B6F6 100%);
  color: #fff;
}

.btn-primary:active {
  background: linear-gradient(135deg, #29B6F6 0%, #0288D1 100%);
  transform: scale(0.98);
}

.btn-primary[disabled] {
  background: #e0e0e0;
  color: #999;
  transform: none;
}

.result-wrapper {
  margin-top: 32rpx;
}

.result-title {
  font-size: 28rpx;
  font-weight: 600;
  color: #333;
  margin-bottom: 24rpx;
  padding: 0 16rpx;
}

.result-list {
  display: flex;
  flex-direction: column;
  gap: 24rpx;
}

.result-item {
  background: #fff;
  border-radius: 16rpx;
  padding: 32rpx;
  box-shadow: 0 2rpx 12rpx rgba(0, 0, 0, 0.05);
  border-left: 4rpx solid #4FC3F7;
}

.result-content {
  margin-bottom: 24rpx;
}

.result-text {
  font-size: 26rpx;
  line-height: 1.6;
  color: #333;
  word-break: break-all;
  display: block;
}

.result-actions {
  display: flex;
  justify-content: flex-end;
}

.btn-copy {
  background: #f0f8ff;
  color: #4FC3F7;
  border: 2rpx solid #4FC3F7;
  border-radius: 32rpx;
  padding: 12rpx 32rpx;
  font-size: 24rpx;
  transition: all 0.3s ease;
}

.btn-copy:active {
  background: #4FC3F7;
  color: #fff;
  transform: scale(0.95);
}

.error-wrapper {
  background: #fff5f5;
  border: 2rpx solid #ffebee;
  border-radius: 12rpx;
  padding: 24rpx;
  margin-top: 32rpx;
}

.error-text {
  font-size: 26rpx;
  color: #f44336;
  text-align: center;
  line-height: 1.5;
}

/* 加载状态 */
.loading {
  opacity: 0.7;
  pointer-events: none;
}

/* 动画效果 */
.result-item {
  animation: fadeInUp 0.5s ease-out;
}

@keyframes fadeInUp {
  from {
    opacity: 0;
    transform: translateY(30rpx);
  }
  to {
    opacity: 1;
    transform: translateY(0);
  }
}