/* IP复刻页面样式 */
.container {
  padding: 20rpx;
  background-color: #f8f8f8;
  min-height: 100vh;
}

/* 输入区域 */
.input-section {
  background: white;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.input-label {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.input-textarea {
  width: 100%;
  min-height: 200rpx;
  padding: 20rpx;
  border: 2rpx solid #e0e0e0;
  border-radius: 8rpx;
  font-size: 28rpx;
  line-height: 1.5;
  background-color: #fafafa;
}

.input-textarea:focus {
  border-color: #007aff;
  background-color: white;
}

.char-count {
  text-align: right;
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}

/* 按钮区域 */
.button-section {
  margin-bottom: 30rpx;
}

.action-btn {
  width: 100%;
  height: 88rpx;
  background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
  color: white;
  border: none;
  border-radius: 44rpx;
  font-size: 32rpx;
  font-weight: 500;
  display: flex;
  align-items: center;
  justify-content: center;
}

.action-btn:disabled {
  background: #cccccc;
  color: #999999;
}

.action-btn.loading {
  background: #cccccc;
}

/* 结果展示区域 */
.result-section {
  background: white;
  border-radius: 12rpx;
  padding: 30rpx;
  margin-bottom: 30rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.result-title {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 20rpx;
  font-weight: 500;
}

.result-list {
  display: flex;
  flex-direction: column;
  gap: 20rpx;
}

.result-item {
  background: #f8f9fa;
  border-radius: 8rpx;
  padding: 20rpx;
  border-left: 4rpx solid #007aff;
}

.result-content {
  font-size: 28rpx;
  line-height: 1.6;
  color: #333;
  margin-bottom: 15rpx;
  word-wrap: break-word;
}

.result-actions {
  display: flex;
  justify-content: flex-end;
}

.copy-btn {
  background: #007aff;
  color: white;
  border: none;
  border-radius: 20rpx;
  padding: 10rpx 30rpx;
  font-size: 24rpx;
  min-width: auto;
  height: auto;
  line-height: 1;
}

.copy-btn:active {
  background: #0056cc;
}

/* 错误提示 */
.error-message {
  background: #fff2f0;
  color: #ff4d4f;
  padding: 20rpx;
  border-radius: 8rpx;
  font-size: 28rpx;
  text-align: center;
  border: 2rpx solid #ffccc7;
}